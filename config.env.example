# Sentio C++ Environment Variables
# Copy this file to config.env and add your actual API keys

# Polygon.io API Key (for market data)
export POLYGON_API_KEY=your_polygon_api_key_here

# Alpaca API Keys (for paper and live trading)
export ALPACA_PAPER_API_KEY=your_alpaca_paper_key_here
export ALPACA_PAPER_SECRET_KEY=your_alpaca_paper_secret_here
export ALPACA_LIVE_API_KEY=your_alpaca_live_key_here
export ALPACA_LIVE_SECRET_KEY=your_alpaca_live_secret_here

# Data Configuration
# SENTIO_DATA_SUFFIX: File suffix for data files (e.g., _NH for no holidays, _NH_ALIGNED for aligned data)
export SENTIO_DATA_SUFFIX=_NH_ALIGNED
# SENTIO_DATA_ROOT: Root directory for market data files
export SENTIO_DATA_ROOT=data/equities

# Database paths
export SENTIO_DB_PATH=audit/sentio_audit.sqlite3
export DATA_DIR=data/equities
